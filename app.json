{
  "id": "com.gruijter.facepp",
  "version": "1.0.0",
  "compatibility": ">=3.0.0",
  "sdk": 2,
  "name": {
    "en": "Face++"
  },
  "description": {
    "en": "Homey has face recognition!"
  },
  "category": [ "localization", "security", "video" ],
  "tags": {
    "en": [ "face recognition", "video", "analytics", "biometrics" ]
  },
  "permissions": [],
  "images": {
    "large": "/assets/images/large.jpg",
    "small": "/assets/images/small.jpg"
  },
  "author": {
    "name": "Robin Gruijter",
    "email": "gruijter@hotmail.com"
  },
  "contributors": {
    "developers": [
      {
        "name": "Robin de Gruijter",
